# ========================================
# DeDebtify Frontend Environment Variables
# ========================================

# API Configuration
# Backend API URL (without trailing slash)
VITE_API_URL=http://localhost:3001/api

# App Configuration
VITE_APP_NAME="DeDebtify"
VITE_APP_VERSION="2.0.0"

# Feature Flags
VITE_ENABLE_PLAID=true
VITE_ENABLE_CHARTS=true
VITE_ENABLE_NOTIFICATIONS=false

# Analytics (Optional)
# VITE_GOOGLE_ANALYTICS_ID=""
# VITE_MIXPANEL_TOKEN=""

# Sentry (Optional - for error tracking)
# VITE_SENTRY_DSN=""
# VITE_SENTRY_ENVIRONMENT="development"

# Debug Mode
VITE_DEBUG=true

# API Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# Plaid Configuration
# These are public keys, safe to expose in frontend
VITE_PLAID_ENV="sandbox"

# App URLs
VITE_APP_URL="http://localhost:5173"

# Social Media (Optional - for sharing)
# VITE_TWITTER_HANDLE="@dedebtify"
# VITE_FACEBOOK_APP_ID=""
